!!! 5
%html
  %head
    %meta{:content => "text/html;charset=utf-8", "http-equiv" => "Content-Type"}
    %meta{:content => "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}
    %title Lab Interactive Automated Benchmarking
    %link{:href => "benchmark.css", :rel => "stylesheet", :type => "text/css"}
    %script{:src => "vendor/modernizr/modernizr.js", :type => "text/javascript"}
    %script{:type => "text/javascript"}
      if (!Modernizr.svg) { window.location = 'browser-upgrade.html'; }
    = ANALYTICS
  %body
    #header
      %h1<
        %a(href='index.html')> Lab
        \:
        %a(href="") Automated Benchmarking
      %a#logo{:href => "http://www.concord.org/"}
        %img{:src => "resources/cc-logo.png"}


    .column
      %div
        .config-col
          %span
            Lab version:
          %label
            %input{:type => "radio", :class => "host", :name => "host", :value => "production", :checked => true}
            production
          %label
            %input{:type => "radio", :class => "host", :name => "host", :value => "staging"}
            staging
          %label
            %input{:type => "radio", :class => "host", :name => "host", :value => "development"}
            development
          %label
            %input{:type => "radio", :class => "host", :name => "host", :value => "0.5.12"}
            0.5.12
          %label
            %input{:type => "radio", :class => "host", :name => "host", :value => "0.6.0"}
            0.6.0
          %label
            %input{:type => "radio", :class => "host", :name => "host", :value => "0.6.1"}
            0.6.1
          %label
            %input{:type => "radio", :class => "host", :name => "host", :value => "0.6.2"}
            0.6.2
        .config-col
          %span
            Interactive categories:
          %label
            %input{:type => "checkbox", :class => "category", :value => "MD2D_only", :checked => true}
            MD2D only
          %label
            %input{:type => "checkbox", :class => "category", :value => "Benchmarks", :checked => true}
            Benchmarks
          %label
            %input{:type => "checkbox", :class => "category", :value => "Samples"}
            Samples
          %label
            %input{:type => "checkbox", :class => "category", :value => "Curriculum"}
            Curriculum

        %div
          %button{:id => "start"}
            Start benchmark
          %button{:id => "stop"}
            Stop

        #info

      #iframe-wrapper
        %iframe{:id => "iframe-interactive", :width => "100%", :height => "100%", :frameborder => "no", :scrolling => "no", :allowfullscreen => "true", :webkitallowfullscreen => "true", :mozallowfullscreen => "true", :src => "/embeddable.html"}

    .column
      %p
        Benchmark results will be sent to
        %a{:href => "https://docs.google.com/spreadsheet/ccc?key=0AhbEi7W1EBNSdGpvN3FMRl81ZlhLVzNpUUdKVHVZVnc", :target => "_blank"} the Lab Benchmark Data spreadsheet.
      %table#results
        %thead
          %tr
            %th interactive
            %th engine (ms)
            %th JS rendering (ms)
            %th tick (ms)
            %th gap b/w frames (ms)
            %th fps
        %tbody

    %script{:src => "vendor/jquery/jquery.min.js", :type => "text/javascript"}
    %script{:src => "vendor/d3/d3.min.js", :type => "text/javascript"}
    %script{:src => "vendor/iframe-phone/iframe-phone.js", :type => "text/javascript"}
    %script{:src => "benchmark.js", :type => "text/javascript"}

