{
  "title": "Light Matter Feature Test",
  "publicationStatus": "draft",
  "subtitle": "Testing of Light-Matter model features",
  "about": "",
  "aspectRatio": 1.5,
  "models": [
    {
      "type": "md2d",
      "id": "blackbody$0",
      "url": "models-converted/lab-version/1/md2d/sam-activities/light-matter/blackbody/blackbody$0.json",
      "viewOptions": {
        "controlButtons": "play_reset"
      }
    }
  ],
  "parameters": [
    {
      "name": "lightSourceEnabled",
      "initialValue": true,
      "onChange": [
        "if (value) {",
        "  turnOnLightSource();",
        "} else {",
        "  turnOffLightSource();",
        "}"
      ]
    }
  ],
  "components": [
    {
      "type": "slider",
      "id": "temperature-slider",
      "min": 0,
      "max": 10000,
      "labels": [
        {
          "value": 0,
          "label": "Low"
        },
        {
          "value": 10000,
          "label": "High"
        }
      ],
      "steps": 50,
      "title": "Temperature",
      "property": "targetTemperature"
    },
    {
      "type": "barGraph",
      "id": "thermometer",
      "property": "temperature",
      "title": "Temperature (K)",
      "labels": 0,
      "min": 0,
      "max": 10000
    },
    {
      "type": "checkbox",
      "id": "enable-light-source",
      "text": "Light source on",
      "textOn": "right",
      "property": "lightSourceEnabled"
    },
    {
      "type": "checkbox",
      "id": "ke-shading",
      "text": "Display heat in molecules",
      "property": "keShading"
    }
  ],
  "layout": {
    "right": [
      "thermometer"
    ],
    "bottom": [
      "enable-light-source",
      "ke-shading"
    ]
  },
  "template": "left-right-bottom",
  "lang": "nn-NO",
  "i18nMetadata": "locales/metadata/interactives/sam/light-matter/light-matter-feature-test.json"
}
