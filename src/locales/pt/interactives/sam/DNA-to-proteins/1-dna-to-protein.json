        {
            "type": "button",
            "id": "transcribe",
            "text": "Transcrever",
            "action": [
                "if (DNAStateAfter('transcription-end'))",
                "  set('DNAState', 'dna');",
                "animateToDNAState('transcription-end');"
            ]
        },
        {
            "type": "button",
            "id": "transcribe-step",
            "text": "Transcreva passo a passo",
            "action": [
                "if (DNAStateBefore ('dna')) {",
