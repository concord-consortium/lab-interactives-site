{
  "title": "Spectra di assorbimento (Frequenza della luce variabile)",
  "publicationStatus": "draft",
  "subtitle": "Esplora come la luce monocromatica di frequenza variabile interagisce con le miscele di elementi",
  "about": "",
  "aspectRatio": 1.4,
  "fontScale": 0.8,
  "models": [
    {
      "type": "md2d",
      "id": "elementA",
      "url": "models-converted/lab-version/1/md2d/sam-activities/light-matter/monochrome-absorb/elementA.json",
      "viewOptions": {
        "controlButtons": "play_reset"
      },
      "onLoad": [
        "setLightSourceAngle(0);",
        "setLightSourceFrequency(get('lightSourceFrequency'));",
        "setLightSourceNumber(5);",
        "setLightSourcePeriod(500);",
        "setTemperatureOfAtoms(atomsWithinRect(0,0,get('width'),get('height')),300);",
        "set('timeStepsPerTick',20);"
      ]
    },
    {
      "type": "md2d",
      "id": "elementB",
      "url": "models-converted/lab-version/1/md2d/sam-activities/light-matter/monochrome-absorb/elementB.json",
      "viewOptions": {
        "controlButtons": "play_reset"
      },
      "onLoad": [
        "setLightSourceAngle(0);",
        "setLightSourceFrequency(get('lightSourceFrequency'));",
        "setLightSourceNumber(5);",
        "setLightSourcePeriod(500);",
        "setTemperatureOfAtoms(atomsWithinRect(0,0,get('width'),get('height')),300);",
        "set('timeStepsPerTick',20);"
      ]
    },
    {
      "type": "md2d",
      "id": "elementC",
      "url": "models-converted/lab-version/1/md2d/sam-activities/light-matter/monochrome-absorb/elementC.json",
      "viewOptions": {
        "controlButtons": "play_reset"
      },
      "onLoad": [
        "setLightSourceAngle(0);",
        "setLightSourceFrequency(get('lightSourceFrequency'));",
        "setLightSourceNumber(5);",
        "setLightSourcePeriod(500);",
        "setTemperatureOfAtoms(atomsWithinRect(0,0,get('width'),get('height')),300);",
        "set('timeStepsPerTick',20);"
      ]
    }
  ],
  "parameters": [
    {
      "name": "lightSourceFrequency",
      "initialValue": 3,
      "onChange": "setLightSourceFrequency(value);"
    }
  ],
  "components": [
    {
      "type": "text",
      "id": "text-select-model",
      "text": "**Scegli una sostanza da caricare**"
    },
    {
      "type": "radio",
      "id": "select-model",
      "options": [
        {
          "text": "Miscela A",
          "action": "loadModel('elementA');"
        },
        {
          "text": "Miscela B",
          "action": "loadModel('elementB');"
        },
        {
          "text": "Miscela C",
          "action": "loadModel('elementC');"
        }
      ]
    },
    {
      "type": "button",
      "id": "enable-light-source",
      "text": "Luce brillare sulla miscela",
      "action": [
        "start();",
        "turnOnLightSource();"
      ]
    },
    {
      "type": "button",
      "id": "stop-model",
      "text": "Stopped",
      "action": "stop()"
    },
    {
      "type": "slider",
      "id": "select-light-source-frequency",
      "min": 1,
      "max": 15,
      "steps": 14,
      "property": "lightSourceFrequency",
      "labels": [
        {
          "value": 1,
          "label": "Low"
        },
        {
          "value": 15,
          "label": "Hi"
        }
      ],
      "title": "Frequenza della sorgente luminosa"
    }
  ],
  "layout": {
    "left": [
      [
        "text-select-model"
      ],
      [
        "select-model"
      ]
    ],
    "bottom": [
      [
        "enable-light-source",
        "stop-model"
      ],
      [
        "select-light-source-frequency"
      ]
    ]
  },
  "template": [
    {
      "id": "left",
      "top": "model.top",
      "height": "model.height",
      "right": "model.left",
      "padding-right": "0.5em"
    },
    {
      "id": "right",
      "top": "model.top",
      "height": "model.height",
      "left": "model.right",
      "padding-left": "1em",
      "padding-right": "0.5em"
    },
    {
      "id": "bottom",
      "top": "model.bottom",
      "left": "model.left",
      "width": "model.width",
      "align": "center"
    }
  ],
  "lang": "it",
  "i18nMetadata": "locales/metadata/interactives/sam/light-matter/mixtureAbsorption.json"
}