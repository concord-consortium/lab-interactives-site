{
  "title": "Charge Intensity and Electric Force - opposite charges",
  "publicationStatus": "public",
  "labEnvironment": "production",
  "subtitle": "Manipulate the charge of the objects to explore the relationship between the magnitude of electric charge and forces on objects.",
  "category": "",
  "subCategory": "",
  "screenshot": "",
  "aspectRatio": 1.31,
  "fontScale": 1,
  "lang": "en-US",
  "i18nMetadata": "",
  "credits": "",
  "helpOnLoad": false,
  "aboutOnLoad": false,
  "about": [
    "Control the amount of charge on two objects an observe how it affects ",
    "the strength of the forces acting between the two objects."
    ],
  "theme": "",
  "showTopBar": true,
  "showBottomBar": true,
  "padding": 10,
  "models": [
    {
      "type": "md2d",
      "id": "amount-charge$0",
      "url": "models-converted/lab-version/1/md2d/ngss-assessment/charge-and-force/charge-and-force-opposite-model.json",
      "onLoad": [
        "set('showElectricField',false);",
        "set('left-particle-charge',1);",
        "set('right-particle-charge',1);",
        "start();"
      ],
      "viewOptions": {
        "controlButtons": "",
        "enableKeyboardHandlers": false,
        "electricFieldDensity": 24,
        "electricFieldColor": "rgb(0,255,0)",
        "forceVectors": {
          "length": 17
        }
      },
      "modelOptions": {
        "useDuration": false
      }
    }
  ],
  "propertiesToRetain": [],
  "parameters": [
    {
      "name": "left-particle-charge",
      "initialValue": 2,
      "onChange": "setAtomProperties(1,{charge: -1*value});"
    },
    {
      "name": "right-particle-charge",
      "initialValue": -2,
      "onChange": "setAtomProperties(0,{charge: value});"
    }
  ],
  "outputs": [],
  "filteredOutputs": [],
  "helpTips": [],
  "exports": {
    "selectionComponents": [],
    "perRun": [
      "left-particle-charge",
      "right-particle-charge",
      "potentialEnergy"
    ],
    "perTick": []
  },
  "logging": {
    "enabled": true,
    "properties": [
      "left-particle-charge",
      "right-particle-charge",
      "potentialEnergy"
    ],
    "components": "all"
  },
  "dataSets": [],
  "components": [
    {
      "id": "set-left-particle-charge",
      "type": "slider",
      "min": 1,
      "max": 3,
      "steps": 4,
      "title": "Charge of left object",
      "titlePosition": "top",
      "labels": [
        {
          "value": 1,
          "label": "low"
        },
        {
          "value": 3,
          "label": "high"
        }
      ],
      "width": "auto",
      "height": "auto",
      "property": "left-particle-charge",
      "retainProperty": true,
      "disabled": false,
      "tooltip": "",
      "helpIcon": false
    },
    {
      "id": "set-right-particle-charge",
      "type": "slider",
      "min": 1,
      "max": 3,
      "steps": 4,
      "title": "Charge of right object",
      "titlePosition": "top",
      "labels": [
        {
          "value": 1,
          "label": "low"
        },
        {
          "value": 3,
          "label": "high"
        }
      ],
      "width": "auto",
      "height": "auto",
      "property": "right-particle-charge",
      "retainProperty": true,
      "disabled": false,
      "tooltip": "",
      "helpIcon": false
    },
    {
      "id": "select-show-forces",
      "type": "checkbox",
      "text": "Show forces",
      "textOn": "right",
      "width": "auto",
      "height": "auto",
      "property": "showForceVectors",
      "retainProperty": true,
      "disabled": false,
      "tooltip": "",
      "helpIcon": false
    },
    {
      "id": "select-show-electric-field",
      "type": "checkbox",
      "text": "Show electric field",
      "textOn": "right",
      "width": "auto",
      "height": "auto",
      "property": "showElectricField",
      "retainProperty": true,
      "disabled": false,
      "tooltip": "",
      "helpIcon": false
    }
  ],
  "layout": {
    "bottom": [
      [
        "set-left-particle-charge",
        "set-right-particle-charge"
      ],
      [
        "select-show-forces",
        "select-show-electric-field"
      ]
    ]
  },
  "template": [
    {
      "id": "bottom",
      "left": "model.left",
      "top": "model.bottom",
      "width": "model.width",
      "align": "center"
    }
  ]
}
