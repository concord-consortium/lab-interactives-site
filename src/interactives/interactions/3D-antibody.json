      "options": [
        {
          "text": "spacefill atoms",
          "action": "post('jsmolScript', 'select atomno<1656; spacefill 100%; wireframe 0;');",
          "selected": true
        },
        {
          "text": "ball & stick",
          "action": "post('jsmolScript', 'select atomno<1656; spacefill 20%; wireframe 0.15;');"
        }
      ],
