{
  "title": "Energy of a Spring",
  "publicationStatus": "public",
  "subtitle": "Energy conservation and transformation in a spring.",
  "about": [
    "Explore the conversion of energy between elastic potential, kinetic, and thermal energy."
  ],
  "aspectRatio": 1.5,
  "fontScale": 0.8,
  "models": [
    {
      "type": "md2d",
      "id": "spring",
      "url": "models-converted/lab-version/1/md2d/interactions/spring/spring$0.json",
      "importedFrom": "imports/legacy-mw-content/interactions/spring/spring$0.mml",
      "viewOptions": {
        "controlButtons": "play_reset",
        "controlButtonStyle": "text",
        "textBoxes": [
          {
            "text": "Drag the spring to set its initial position.",
            "x": 0.2,
            "y": 2.0,
            "layer": 1,
            "fontSize": 0.16,
            "anchor": "upper-left"
          }
        ]
      },
      "modelOptions": {
        "unitsScheme": "mks",
        "timeStepsPerTick": 167,
        "timeStep": 1,
        "modelSampleRate": 60
      },
      "onLoad": [
        "onDrag('atom', function (x, y, d, i) {",
        "  if(i === 1 && get('time') === 0){",
        "    set('startingDisplacement', Math.min(Math.max(x - 1.29, -0.82), 0.82));",
        "  }",
        "});",
        "// Disable atom dragging once started",
        "onStart(function(){",
        "  setAtomProperties(1, {draggableWhenStopped: 0});",
        "});"
      ]
    }
  ],
  "outputs": [
    {
      "name": "kineticEnergy",
      "unitAbbreviation": "J",
      "label": "Kinetic Energy",
      "value": [
        "var atom = getAtomProperties(1);return 0.5 * atom.vx * atom.vx;"
      ]
    },
    {
      "name": "potentialEnergy",
      "unitAbbreviation": "J",
      "label": "Potental Energy",
      "value": [
        "var atom = getAtomProperties(1);return 0.5 * 24 * (atom.x - 1.29) * (atom.x - 1.29);"
      ]
    },
    {
      "name": "totalEnergy",
      "unitAbbreviation": "J",
      "label": "Total Energy",
      "value": [
        "return 0.5 * 24 * get('startingDisplacement') * get('startingDisplacement') + get('minThermalEnergy');"
      ]
    },
    {
      "name": "thermalEnergy",
      "unitAbbreviation": "J",
      "label": "Thermal Energy",
      "value": [
        "return get('totalEnergy') - get('kineticEnergy') - get('potentialEnergy');"
      ]
    }
  ],
  "parameters": [
    {
      "name": "startingDisplacement",
      "initialValue": 0,
      "onChange": "setAtomProperties(1, {x:1.29 + value, y: 0.43});setAtomProperties(0, {x:0.24 , y: 0.43});"
    },
    {
      "name": "minThermalEnergy",
      "initialValue": 0.1
    }
  ],
  "components": [
    {
      "type": "barGraph",
      "min": 0,
      "max": 8.1,
      "barWidth": "1.6em",
      "id": "potentialEnergyGraph",
      "property": "potentialEnergy",
      "barColor": "#4c952f",
      "title": "Potential Energy (J)"
    },
    {
      "type": "barGraph",
      "min": 0,
      "max": 8.1,
      "barWidth": "1.6em",
      "id": "kineticEnergyGraph",
      "property": "kineticEnergy",
      "barColor": "#3f2168",
      "title": "Kinetic Energy (J)"
    },
    {
      "type": "barGraph",
      "min": 0,
      "max": 8.1,
      "barWidth": "1.6em",
      "id": "thermalEnergyGraph",
      "property": "thermalEnergy",
      "barColor": "#95602f",
      "title": "Thermal Energy (J)"
    },
    {
      "type": "graph",
      "id": "energyGraph",
      "title": "Energy vs Time",
      "xlabel": "Time (s)",
      "ylabel": "Energy (J)",
      "ymin": -0.2,
      "ymax": 8.5,
      "xmax": 8,
      "autoScaleY": false,
      "xTickCount": 5,
      "yTickCount": 6,
      "xFormatter": ".2r",
      "yFormatter": ".2s",
      "dataColors": [
        "#70c64e",
        "#814ec6",
        "#c6884e",
        "#7c7c7c"
      ],
      "properties": [
        "potentialEnergy",
        "kineticEnergy",
        "thermalEnergy",
        "totalEnergy"
      ],
      "legendLabels": [
        "Potental Energy",
        "Kinetic Energy",
        "Thermal Energy",
        "Total Energy"
      ],
      "legendVisible": true
    }
  ],
  "layout": {
    "right": [
      "energyGraph"
    ],
    "bottom": [
      "potentialEnergyGraph",
      "kineticEnergyGraph",
      "thermalEnergyGraph"
    ]
  },
  "template": [
    {
      "id": "bottom",
      "left": "model.left",
      "top": "model.bottom",
      "width": "model.width",
      "height": "model.height",
      "padding-top": "0.5em",
      "align": "center"
    },
    {
      "id": "right",
      "top": "model.top",
      "left": "model.right",
      "width": "model.width * 1.3",
      "bottom": "interactive.bottom",
      "padding-left": "1em",
      "padding-right": "0.5em"
    }
  ]
}