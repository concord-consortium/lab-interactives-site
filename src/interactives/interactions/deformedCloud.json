    }, {
      "value": -0.8,
      "label": "Negative"
    }, {
      "value": 0.8,
      "label": "Positive"
    }],
    "action": "set({'left-charge': value});"
  }, {
    "type": "slider",
    "id": "right-charge-slider",
    "title": "Right Charge",
    "width": "16em",
    "min": -1,
    "max": 1,
    "steps": 30,
    "initialValue": 0,
    "labels": [{
      "value": 0,
      "label": "0"
    }, {
      "value": -0.8,
      "label": "Negative"
    }, {
      "value": 0.8,
      "label": "Positive"
    }],
    "action": "set({'right-charge': value});"
  }],
  "layout": {
    "bottom": [
      "left-charge-slider",
      "right-charge-slider"
    ]
  },
