<opaque>false</opaque>
<modelclass>org.concord.mw2d.models.MolecularModel</modelclass>
<model>0</model>
<script>select atom within (20, 0, 20, 25);
set vy 250;
select atom within (0, 0, 20, 25); 
set vy -250;
select atom none;</script>
<action>Execute MW script</action>
</component></content>

